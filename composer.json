{
    "name": "clem/2023-advent-of-code",
    "description": "Advent of Code 2023",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "symfony/console": "^7.0",
        "ext-gmp": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "symfony/var-dumper": "^7.0",
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.65"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "advent": "php src/advent.php",
        "test": "./vendor/bin/phpunit",
        "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon",
        "phpcsfixer": "./vendor/bin/php-cs-fixer fix"
    }
}
